<header>
  <div class="container-fluid text-center text-white">
    <div class="d-flex justify-content-between align-items-center">
      <!-- Logo Section -->
      <div class="logo-container" style="display: flex; align-items: center;">
        <div class="logo">
          <a href="/patients/new"><img src="/images/PENT_Logo.png" alt="Pooja ENT Clinic, Logo" height="70px"
              width=auto></a>
        </div>


        <!-- Hospital Name -->
        <div class="hospital-name ml-2" style="text-align: center; ">
          <h3 style="font-weight: bolder !important;">
            <%=HospitalName%>
          </h3>
        </div>
      </div>

      <div class="d-flex align-items-center">
        <!-- Navbar for Menu Items -->
        <div class="menu-items d-flex justify-content-center">
          <nav class="navbar navbar-expand-lg navbar-dark">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
              aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav align-items-center">
                <!-- Patients Dropdown -->
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown1" role="button"
                    data-bs-toggle="dropdown" aria-expanded="false">Patients</a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown1">
                    <li><a class="dropdown-item" href="/patients/new">OPD Registration</a></li>
                    <li><a class="dropdown-item" href="/patients/getAppointments/today">Appointments Today</a></li>
                    <%if(user.Role=='Admin' ){%>
                      <li><a class="dropdown-item" href="/patients/getAppointments/old">Appointments By Date</a></li>
                      <%}%>
                        <li disabled><a class="dropdown-item" href="/patients/IPD/new">IPD Admission</a></li>
                        <li><a class="dropdown-item" href="/patients/showAdmitted">Show Admitted</a></li>
                  </ul>
                </li>

                <!-- Purchases Dropdown -->
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown2" role="button"
                    data-bs-toggle="dropdown" aria-expanded="false">Purchases</a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown2">
                    <li><a class="dropdown-item" href="/purchases/home">New Purchase</a></li>
                    <li><a class="dropdown-item" href="/purchases/history">Purchase History</a></li>
                    <li><a class="dropdown-item" href="/purchases/inventoryManager">Inventory Manager</a></li>
                  </ul>
                </li>

                <!-- Reports Dropdown -->
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown3" role="button"
                    data-bs-toggle="dropdown" aria-expanded="false">Reports</a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown3">
                    <li><a class="dropdown-item" href="/reports/new/home">New Pathology Report</a></li>
                    <li><a class="dropdown-item" href="/reports/history/home">Find Pathology Reports</a></li>
                  </ul>
                </li>

                <!-- Services Dropdown -->
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown4" role="button"
                    data-bs-toggle="dropdown" aria-expanded="false">Services</a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown4">
                    <li><a class="dropdown-item" href="/sales/bill/medical">New Medical Bill</a></li>
                    <li><a class="dropdown-item" href="/sales/bill/others">Other Bill</a></li>
                    <li><a class="dropdown-item" href="/sales/History/home">Sales History</a></li>
                    <li><a class="dropdown-item" href="/reports/birthCertificates">Find Birth Certificates</a></li>
                  </ul>
                </li>

                <!-- Profile Dropdown -->
                <li class="nav-item dropdown">
                  <a class="nav-link " title="Profile" style="font-size: 2rem;" href="#" id="navbarDropdown5"
                    role="button" data-bs-toggle="dropdown" aria-expanded="false"><i
                      class="fa-regular fa-circle-user"></i></a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown5">
                    <%if(user.Role=='Admin' ){%>
                      <li><a id="AdminDash" class="dropdown-item" href="/user/Admin">Admin Dashboard</a></li>
                      <%}%>
                        <li><a class="dropdown-item" href="/user/changePasswordHome">Change Password</a></li>
                  </ul>
                </li>

                <li class="nav-item dropdown">
                  <a id="navbarDropdown6" title="Logout" href="/user/logout" class="d-flex"><i
                      class="fa-solid fa-right-from-bracket"></i></a>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>

